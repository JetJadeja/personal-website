---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import createSlug from "../lib/createSlug"

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Jet Jadeja</div>
    <div class="text-3xl py-3 font-bold">Blockchain Engineer + High School Student</div>
    <div class="py-2">
      <text class="text-lg">
        Over the years, I've thrived in various startups and have dedicated myself to crafting open source tools that empower developers 
        and bolster community. At the heart of my journey is a drive to build tools that connect people and elevate collective potential. 
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" style="background-color: #BD93F9; color: black; padding: 10px; text-decoration: none;" href="https://twitter.com/jetjadeja" target="_blank"><b>Let's connect!</b></a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Top Projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="Huff"
    img="https://pbs.twimg.com/media/FYtB4QYVsAA--Oa.png"
    desc="EVM-targeted low-level assembly language designed to both optimize smart contracts and educate developers about blockchain intricacies."
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Generalized Lending Protocol"
    img="https://files.oaiusercontent.com/file-LM5uX5lM6pNtTDDDflFjONZ5?se=2024-05-10T20%3A17%3A47Z&sp=r&sv=2023-11-03&sr=b&rscc=max-age%3D31536000%2C%20immutable&rscd=attachment%3B%20filename%3Da5ed5431-5b87-4b9e-981e-7fd9f10d2768.webp&sig=MRopU//bpMEevm6hqroamEr/vgnCRClK5KqVs0M9xFc%3D"
    desc="Hyper-optimized, forkable Lending Protocol. More than tenfold efficiency compared to its competitors, offering teams a customizable base for their lending solutions."
    url="#"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Vaults"
    img="https://files.oaiusercontent.com/file-AMVbirEj1EtaWwqotZzheQfv?se=2024-05-10T20%3A43%3A38Z&sp=r&sv=2023-11-03&sr=b&rscc=max-age%3D31536000%2C%20immutable&rscd=attachment%3B%20filename%3D3a58d3a1-c750-4ca4-aaef-95f440b8a873.webp&sig=QoW1IgHHHmDL5HIxrCDYQSt9I0Ga5ijyxaxiq0F33sY%3D"
    desc="Flexible, minimalist, and gas-optimized yield aggregator protocol for earning interest on any ERC20 token. Built for Rari Capital."
    url="#"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + createSlug(post.data.title, post.slug)}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
